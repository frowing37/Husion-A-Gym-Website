@{
    Layout = "/Views/Shared/_Layout4.cshtml";
}

<div class="login-div">
    <div class="login">
        <header class="header">
            <nav class="navbar">
                <a href="/Admin/Customers">Müşteriler</a>
                <a href="/Admin/Antrenors">Antrenörler</a>
            </nav>
        </header>
        <br />
        <div class="cards-main">
            <div class="list-card">
                <h2 style="color:white;">Yeni Antrenör</h2>
                <form method="post">
                    <img src="/Images/blankprofile.jpg" style="border-radius:90px;" height="90px" width="90px" />
                    <br />
                    <input type="file" />
                    <br />
                    <div class="duble-input">
                        <input type="text" placeholder="Ad" />
                        <input type="text" style="margin-left:10px;" placeholder="Soyad" />
                    </div>
                    <div class="duble-input">
                        <input type="email" placeholder="Mail" />
                        <input type="text" style="margin-left:10px;" placeholder="Şifre" />
                    </div>
                    <div class="duble-input">
                        <input type="tel" placeholder="Telefon Numarası" />
                        <input type="tel" style="margin-left:10px;" placeholder="Hedef" />
                    </div>
                    <div class="duble-input">
                        <input type="tel" placeholder="Boy" />
                        <input type="tel" style="margin-left:10px;" placeholder="Kilo" />
                    </div>
                    <div class="duble-input">
                        <input type="tel" placeholder="Vücut Yağ Oranı" />
                        <input type="tel" style="margin-left:10px;" placeholder="Kas Kütlesi" />
                    </div>
                    <div class="exercises-result">
                        <button id="btnr" type="submit">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .duble-input {
        position: relative;
        display: inline-flex;
        align-content: center;
        align-items: center;
    }
    #deletea {
        background-color: #821008;
    }

        #deletea:hover {
            background-color: #ad170c;
        }

    #detaila {
        background-color: #9e3a08;
    }

        #detaila:hover {
            background-color: #cc4e0e;
        }

    #activea {
        background-color: #370075;
    }

        #activea :hover {
            background-color: #4a009e;
        }

    #updatea {
        background-color: #0c1661;
    }

        #updatea:hover {
            background-color: #14259c;
        }

    .tbl {
        width: 100%;
        border-collapse: collapse;
        background-color: grey;
        border-radius: 10px;
    }

        .tbl th,
        .tbl td {
            padding: 8px;
            padding-bottom: 20px;
            text-align: center;
            color: white;
        }

        .tbl th {
            background-color: #ffffff05;
            font-weight: 600;
        }

        .tbl td a {
            background-color: #a80309;
            font-family: 'Orbitron', sans-serif;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: small;
            margin-left: 8px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

    #btnr {
        font-family: 'Orbitron', sans-serif;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: small;
        margin-left: 8px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        background-color: #1a1717;
    }

        #btnr:hover {
            background-color: #202421;
        }

    .exercises-result {
        position: relative;
        display: inline-flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .list {
        text-align: left;
    }

    .listul {
        list-style-type: none;
        padding: 0;
    }

        .listul li {
            margin: 5px;
            padding: 10px;
            border-radius: 5px;
            color: white;
        }

            .listul li :hover {
                background-color: #2b2828;
            }

    .cards-main {
        position: relative;
        display: inline-flex;
        align-content: center;
        align-items: center;
        margin-top: 15px;
    }

    .list-card {
        width: 700px;
        height: auto;
        border-radius: 10px;
        background-color: #21401b;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(25px);
    }

    .navbar a {
        font-size: larger;
        text-decoration: none;
        color: white;
        font-weight: 800;
        margin-left: 40px;
        padding: 10px 20px;
    }

        .navbar a:hover {
            background-size: 100px;
            background-color: #288f2d;
            border-radius: 10px;
        }

    .header {
        position: relative;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        width: 1000px;
        margin-top: -20px;
